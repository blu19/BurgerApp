<h1>Burgers!</h1>

<h2>Burgers that are not Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
    
        <button class="change-devour" data-id="{{id}}" data-newdevour="true">
            Devour!
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="Bur">Burger Name:</label>
        <input type="text" id="burger_name" name="name">
    </div>

    <div class="form-group">
        <label for="Devour">Devoured?</label><br>
        <input type="radio" name="Devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="Devoured" value="0"> Not devoured
    </div>

    <button type="submit">Add Burger</button>
</form>