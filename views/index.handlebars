
<div class="container text-center">
<img src="assets/img/burger-cartoon-vector-895857.jpg" alt="burger" class="bugerImg">

<h1>Burger Time!</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col">

            <h2>Burgers not Devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                
                    <button class="change-devour button" data-id="{{id}}" data-newdevour="true">
                        Devour!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">

            <h2>Burgers Devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
    </div>
</div>

<div class="container">
    <div class="row">
<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="Bur">Burger Name:</label>
        <input type="text" id="burger_name" name="name">
    </div>

